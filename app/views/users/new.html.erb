<div class="row">
     <img src="/assets/placeholder.png" class="col-md-offset-4 col-md-1 img-circle img-responsive" height="30"/>
     <h1 class="col-md-6">WEBSITE NAME</h1>
</div>
<div class="container">
    <div class="row">
      <div class="col-md-6" style="border-right= 2px solid #778899">
        <h2 class="text-center">Signup</h2>
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <label for="name" class="text-center">Name:</label>
            <%= f.text_field :name,placeholder: "Enter Your name:", id: "name", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <%= f.email_field :email, placeholder: "Enter Your Email:", id: "email" ,class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <%= f.password_field :password, placeholder: "**********", id: "password",class: "form-control" %>
          </div>
          <%= f.submit "Signup", class:"btn btn-default center-block" %>
        <% end %>
      </div>
      <div class="col-md-6">
        <h2 class="text-center">Signin</h2>

        <%= form_for(:signin,url: signin_path)  do |f| %>
        <div class="form-group">
          <%= f.label :Email %>
          <%= f.email_field :email,placeholder: "Enter Your Email:", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Password %>
          <%= f.password_field :password ,placeholder: "**********" ,class:"form-control" %>
        </div>
        <input type="submit" value="Signin" class="btn btn-default center-block">
      <% end %>

      </div>
    </div>
</div>
